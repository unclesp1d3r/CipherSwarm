{
    "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
    "default": true,
    "heading-increment": true,
    "MD003": {
        "style": "atx"
    },
    "line-length": false,
    "MD004": {
        "style": "consistent"
    },
    "MD007": {
        "indent": 2
    },
    "MD013": false,
    "MD024": {
        "siblings_only": true
    },
    "MD029": false,
    "MD033": {
        "allowed_elements": [
            "span"
        ]
    },
    "MD035": {
        "style": "---"
    },
    "MD046": {
        "style": "fenced"
    },
    "MD048": {
        "style": "backtick"
    },
    "first-line-h1": false,
    "fenced-code-language": true
}
