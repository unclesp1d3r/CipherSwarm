<%= simple_form_for @user, url: create_user_path(@user) do |f| %>
  <%= render Railsboot::ErrorsComponent.new(@user) %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= render Railsboot::ButtonComponent.new(tag: "a", href: admin_index_path, variant: "danger", text: "Cancel") %>
  </div>

<% end %>
