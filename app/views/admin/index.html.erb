<h2>Users</h2>
<table class="table table-striped table-bordered table-sm">
  <thead>
  <tr>
    <th>id</th>
    <th>User Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Projects</th>
    <th>Last Login</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody class="table-group-divider">
  <% @users.each do |u| %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= u.role %></td>
      <td><%= truncate(u.projects.map(&:name).to_sentence) %></td>
      <td><%= time_ago_in_words u.current_sign_in_at %> from <%= u.current_sign_in_ip %></td>
      <td>
        <% if u != current_user %>
          <% if u.access_locked? %>
            <%= button_to unlock_user_path(u), method: :post do %>
              <%= icon("lock-fill") %>
            <% end %>
          <% else %>
            <%= button_to lock_user_path(u), method: :post do %>
              <%= icon("unlock-fill") %>
            <% end %>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Projects</h2>
<div class="btn-group-sm">
  <%= link_to new_project_path, class: "btn btn-primary" do %>
    <%= icon("plus-circle-fill") %>New Project
  <% end %>

</div>
<table class="table table-striped table-bordered table-sm">
  <thead>
  <tr>
    <th>id</th>
    <th>Project Name</th>
    <th>Users</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody class="table-group-divider">
  <% @projects.each do |p| %>
    <tr>
      <td><%= p.id %></td>
      <td><%= p.name %></td>
      <td><%= truncate(p.users.map(&:name).to_sentence) %></td>
      <td>
        <div class="btn-group btn-group-sm">
          <%= button_to p, class: "btn btn-outline-primary", method: :get do %>
            <%= icon("eye-fill") %>
          <% end %>
          <% if @projects.count > 1 %>
            <%= button_to project_path(p), method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: "btn btn-outline-danger" do %>
              <%== icon("trash-fill") %>
            <% end %>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
