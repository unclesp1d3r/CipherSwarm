<h2>Users</h2>
<% if can? :create, :user %>
  <div class="btn-group btn-group-sm">
    <%= link_to new_user_path, class: "btn btn-primary", data: { turbo_frame: "remote_modal" } do %>
      <%= icon("plus-circle-fill") %>
      New User
    <% end %>
  </div>
<% end %>
<table class="table table-striped table-bordered table-sm">
  <thead>
  <tr>
    <th>id</th>
    <th>User Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Projects</th>
    <th>Last Login</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody class="table-group-divider">
  <% @users.each do |u| %>
    <%= turbo_stream_from u %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= u.role.humanize %></td>
      <td><%= truncate(u.projects.map(&:name).to_sentence, length: 50) %></td>
      <td>
        <% if u.current_sign_in_at.nil? %>
          Never
        <% else %>
          <%= time_ago_in_words u.current_sign_in_at %> ago from <%= u.current_sign_in_ip %>
        <% end %>
      </td>
      <td>
        <div class="btn-group btn-group-sm">
          <% if u != current_user %>
            <% if u.access_locked? %>
              <%= button_to unlock_user_path(u), method: :post, class: "btn btn-primary btn-sm" do %>
                <%= icon("lock-fill") %>
              <% end %>
            <% else %>
              <%= button_to lock_user_path(u), method: :post, class: "btn btn-primary btn-sm" do %>
                <%= icon("unlock-fill") %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<h2>Projects</h2>
<% if can? :create, :project %>
  <div class="btn-group btn-group-sm">
    <%= link_to new_project_path, class: "btn btn-primary btn-sm" do %>
      <%= icon("plus-circle-fill") %>
      New Project
    <% end %>
  </div>
<% end %>
<table class="table table-striped table-bordered table-sm">
  <thead>
  <tr>
    <th>id</th>
    <th>Project Name</th>
    <th>Users</th>
    <th>Last Activity</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody class="table-group-divider">
  <% @projects.each do |p| %>
    <%= turbo_stream_from p %>
    <%= render "projects/project_row", project: p %>
  <% end %>
  </tbody>
</table>
