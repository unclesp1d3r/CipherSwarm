<%= simple_form_for @agent do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :command_parameters %>
  <%= f.input :cpu_only %>
  <%= f.input :ignore_errors %>
  <%= f.input :active %>
  <%= f.input :trusted %>
  <%= f.association :user if current_user.admin? %>
  <%= f.association :projects, as: :check_boxes %>

  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
