<p style="color: green"><%= notice %></p>

<h1>Campaigns</h1>

<table class="table table-striped table-responsive">
  <thead>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Hash List</th>
    <th>Hashes Remaining</th>
    <th>Attacks</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @campaigns.each do |campaign| %>
    <%= render campaign %>
  <% end %>
  </tbody>
</table>

<%= link_to "New campaign", new_campaign_path %>
