<h1><%= title "Mask Lists" %></h1>
<div class="btn-group btn-group-sm">
  <% if can? :create, MaskList %>
    <%= link_to new_mask_list_path, class: "btn btn-primary btn-sm" do %>
      <%= icon("plus-circle-fill") %>
      New Mask List
    <% end %>
  <% end %>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Masks</th>
    <th>Sensitive</th>
    <th>Projects</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @mask_lists.each do |mask_list| %>
    <tr>
      <td><%= mask_list.name %></td>
      <td><%= truncate mask_list.description %></td>
      <td><%= mask_list.line_count %></td>
      <td><%= boolean_icon mask_list.sensitive %></td>
      <td><%= truncate(mask_list.projects.map(&:name).to_sentence) %></td>
      <td>
        <div class="btn-group btn-group-sm">
          <%= link_to icon("eye"), mask_list, class: "btn btn-primary btn-sm" if can? :read, mask_list %>
          <%= link_to icon("pencil"), edit_mask_list_path(mask_list),
                      class: "btn btn-warning btn-sm" if can? :update, mask_list %>
          <%= button_to icon("trash"), mask_list, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                                                  class: "btn btn-danger btn-sm" if can? :destroy, mask_list %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
