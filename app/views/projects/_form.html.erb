<%= simple_form_for @project do |f| %>
  <%= render Railsboot::ErrorsComponent.new(@project) %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :users, as: :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= render Railsboot::ButtonComponent.new(tag: "a", href: admin_index_path, variant: "danger", text: "Cancel") %>
  </div>
<% end %>
