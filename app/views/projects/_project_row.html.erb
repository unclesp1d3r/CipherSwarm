<tr id="<%= dom_id(project) %>">
  <td><%= project.id %></td>
  <td><%= project.name %></td>
  <td><%= truncate(project.users.map(&:name).to_sentence) %></td>
  <td><%= time_ago_in_words project.updated_at %></td>
  <td>
    <div class="btn-group btn-group-sm">
      <%= button_to project, class: "btn btn-outline-primary", method: :get do %>
        <%= icon("eye-fill") %>
      <% end %>
      <% if Project.count > 1 %>
        <%= button_to project_path(project), method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "btn btn-outline-danger" do %>
          <%== icon("trash-fill") %>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>
