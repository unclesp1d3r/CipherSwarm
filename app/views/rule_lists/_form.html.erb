<%= simple_form_for(@rule_list) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :file %>
    <%= f.input :line_count %>
    <%= f.input :sensitive %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
