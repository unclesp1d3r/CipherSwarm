<%# locals: (resource:) -%>

<%= simple_form_for(resource) do |f| %>
  <%= render Railsboot::ErrorsComponent.new(resource) %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :file,
                input_html: { direct_upload: true } %>
    <%= f.input :sensitive %>
    <%= f.association :projects, as: :check_boxes, include_blank: false,
                                 collection: Project.accessible_by(current_ability) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= render Railsboot::ButtonComponent.new(tag: "a", href: url_for(controller: controller_name), variant: "danger", text: "Cancel") %>

  </div>
<% end %>
