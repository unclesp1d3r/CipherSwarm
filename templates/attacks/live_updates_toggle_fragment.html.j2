<div class="flex items-center gap-2">
    <span class="font-medium text-gray-700 dark:text-gray-200">Live Updates:</span>
    {% if live_updates_enabled %}
    <span
        class="inline-flex items-center px-2 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded dark:bg-green-900 dark:text-green-200">Enabled</span>
    <button hx-post="/api/v1/web/attacks/{{ attack.id }}/disable_live_updates" hx-target="closest div"
        hx-swap="outerHTML"
        class="ml-2 px-3 py-1 text-xs font-medium text-white bg-red-600 rounded hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-400"
        aria-pressed="true" title="Disable live updates for this attack">Disable</button>
    {% else %}
    <span
        class="inline-flex items-center px-2 py-1 text-xs font-semibold text-red-800 bg-red-100 rounded dark:bg-red-900 dark:text-red-200">Disabled</span>
    <button hx-post="/api/v1/web/attacks/{{ attack.id }}/disable_live_updates" hx-vals='{"enabled": true}'
        hx-target="closest div" hx-swap="outerHTML"
        class="ml-2 px-3 py-1 text-xs font-medium text-white bg-green-600 rounded hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-400"
        aria-pressed="false" title="Enable live updates for this attack">Enable</button>
    {% endif %}
</div>