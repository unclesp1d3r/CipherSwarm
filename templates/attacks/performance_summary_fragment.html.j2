<div class="flex flex-col gap-2 p-4 bg-white dark:bg-gray-800 rounded shadow">
    <div class="flex flex-row justify-between items-center">
        <span class="font-semibold text-gray-700 dark:text-gray-200">Performance Summary</span>
        <span class="text-xs text-gray-400">Attack: {{ attack.name }}</span>
    </div>
    <div class="grid grid-cols-2 gap-2 text-sm">
        <div>
            <span class="font-medium">Total Hashes:</span>
            <span>{{ total_hashes or 'N/A' }}</span>
        </div>
        <div>
            <span class="font-medium">Hashes Done:</span>
            <span>{{ hashes_done or 0 }}</span>
        </div>
        <div>
            <span class="font-medium">Agents:</span>
            <span>{{ agent_count or 0 }}</span>
        </div>
        <div>
            <span class="font-medium">Speed:</span>
            <span>{{ '%.0f' % hashes_per_sec if hashes_per_sec else 'N/A' }} H/s</span>
        </div>
        <div>
            <span class="font-medium">Progress:</span>
            <span>{{ '%.1f' % progress if progress is not none else 'N/A' }}%</span>
        </div>
        <div>
            <span class="font-medium">ETA:</span>
            <span>
                {% if eta is not none %}
                {% set hours = eta // 3600 %}
                {% set minutes = (eta % 3600) // 60 %}
                {% set seconds = eta % 60 %}
                {{ hours }}h {{ minutes }}m {{ seconds }}s
                {% else %}
                N/A
                {% endif %}
            </span>
        </div>
    </div>
</div>