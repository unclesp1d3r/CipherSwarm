<!-- Attack View Modal -->
<div class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
        <div
            class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                    <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                            Attack Details
                        </h3>
                        {% if error %}
                        <div class="mt-2 p-2 bg-red-100 text-red-700 rounded">{{ error }}</div>
                        {% else %}
                        <div class="mt-2 space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Name</label>
                                <input type="text" class="mt-1 block w-full border-gray-300 rounded-md bg-gray-100"
                                    value="{{ attack.name }}" readonly disabled>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Attack Mode</label>
                                <input type="text" class="mt-1 block w-full border-gray-300 rounded-md bg-gray-100"
                                    value="{{ attack.attack_mode.value|title }}" readonly disabled>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Description</label>
                                <textarea class="mt-1 block w-full border-gray-300 rounded-md bg-gray-100" readonly
                                    disabled>{{ attack.description or '' }}</textarea>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">State</label>
                                <input type="text" class="mt-1 block w-full border-gray-300 rounded-md bg-gray-100"
                                    value="{{ attack.state.value|title }}" readonly disabled>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Hash Type ID</label>
                                <input type="text" class="mt-1 block w-full border-gray-300 rounded-md bg-gray-100"
                                    value="{{ attack.hash_type_id }}" readonly disabled>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Keyspace</label>
                                <input type="text" class="mt-1 block w-full border-gray-300 rounded-md bg-gray-100"
                                    value="{{ performance.total_hashes if performance else 'N/A' }}" readonly disabled>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Complexity Score</label>
                                <input type="text" class="mt-1 block w-full border-gray-300 rounded-md bg-gray-100"
                                    value="{{ attack.complexity_score if attack.complexity_score is not none else '-' }}"
                                    readonly disabled>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Comment</label>
                                <textarea class="mt-1 block w-full border-gray-300 rounded-md bg-gray-100" readonly
                                    disabled>{{ attack.comment or '' }}</textarea>
                            </div>
                            <!-- Add more fields as needed -->
                            <div class="mt-4">
                                {% include "attacks/performance_summary_fragment.html.j2" %}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button"
                        class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:w-auto sm:text-sm"
                        @click="$root.remove()">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>