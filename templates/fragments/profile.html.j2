<!-- User Profile Fragment -->
<div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl mt-6">
    <div class="md:flex">
        <div class="w-full p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Profile Details</h2>
            <dl class="divide-y divide-gray-200">
                <div class="py-2 flex justify-between">
                    <dt class="font-medium text-gray-700">Name</dt>
                    <dd class="text-gray-900">{{ user.name }}</dd>
                </div>
                <div class="py-2 flex justify-between">
                    <dt class="font-medium text-gray-700">Email</dt>
                    <dd class="text-gray-900">{{ user.email }}</dd>
                </div>
                <div class="py-2 flex justify-between">
                    <dt class="font-medium text-gray-700">Active</dt>
                    <dd class="text-gray-900">{{ 'Yes' if user.is_active else 'No' }}</dd>
                </div>
                <div class="py-2 flex justify-between">
                    <dt class="font-medium text-gray-700">Superuser</dt>
                    <dd class="text-gray-900">{{ 'Yes' if user.is_superuser else 'No' }}</dd>
                </div>
                <div class="py-2 flex justify-between">
                    <dt class="font-medium text-gray-700">Verified</dt>
                    <dd class="text-gray-900">{{ 'Yes' if user.is_verified else 'No' }}</dd>
                </div>
                <div class="py-2 flex justify-between">
                    <dt class="font-medium text-gray-700">Created</dt>
                    <dd class="text-gray-900">{{ user.created_at.strftime('%Y-%m-%d %H:%M') }}</dd>
                </div>
                <div class="py-2 flex justify-between">
                    <dt class="font-medium text-gray-700">Last Updated</dt>
                    <dd class="text-gray-900">{{ user.updated_at.strftime('%Y-%m-%d %H:%M') }}</dd>
                </div>
            </dl>
            <div class="mt-6 flex justify-end">
                <button class="bg-blue-500 text-white px-4 py-2 rounded shadow disabled:opacity-50" disabled>Edit
                    Profile</button>
            </div>

            {# Password Change Form #}
            <div class="mt-8">
                <h3 class="text-lg font-semibold mb-2">Change Password</h3>
                <form id="change-password-form" hx-post="/api/v1/web/auth/change_password"
                    hx-target="#password-change-alert" hx-swap="outerHTML" method="POST" class="space-y-4 max-w-md">
                    <div id="password-change-alert"></div>
                    <div>
                        <label for="old_password" class="block text-sm font-medium">Current Password</label>
                        <input type="password" name="old_password" id="old_password" required
                            class="input input-bordered w-full" autocomplete="current-password" />
                    </div>
                    <div>
                        <label for="new_password" class="block text-sm font-medium">New Password</label>
                        <input type="password" name="new_password" id="new_password" required
                            class="input input-bordered w-full" autocomplete="new-password" minlength="10" />
                    </div>
                    <div>
                        <label for="new_password_confirm" class="block text-sm font-medium">Confirm New Password</label>
                        <input type="password" name="new_password_confirm" id="new_password_confirm" required
                            class="input input-bordered w-full" autocomplete="new-password" minlength="10" />
                    </div>
                    <button type="submit" class="btn btn-primary w-full">Change Password</button>
                </form>
            </div>
        </div>
    </div>
</div>