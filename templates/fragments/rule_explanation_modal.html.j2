<!-- Rule Explanation Modal -->
<div id="rule-explanation-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-40">
    <div class="bg-white rounded-lg shadow-lg max-w-lg w-full p-6 relative">
        <button type="button" class="absolute top-2 right-2 text-gray-400 hover:text-gray-700"
            onclick="document.getElementById('rule-explanation-modal').style.display='none'" aria-label="Close">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
        <h2 class="text-xl font-semibold mb-4">Hashcat Rule Syntax - Common Rules</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-left border border-gray-200 rounded">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="px-3 py-2 font-medium text-gray-700">Rule</th>
                        <th class="px-3 py-2 font-medium text-gray-700">Explanation</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entry in rule_explanations %}
                    <tr>
                        <td class="px-3 py-2 font-mono text-blue-700">{{ entry.rule }}</td>
                        <td class="px-3 py-2">{{ entry.desc }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>