{% extends "base.html.j2" %}
{% block content %}
<div class="container mx-auto py-4">
    <h2 class="text-2xl font-bold mb-4">Projects</h2>
    <form class="mb-4 flex items-center" hx-get="/api/v1/web/projects" hx-target="#project-table" hx-push-url="true">
        <input type="text" name="search" value="{{ search or '' }}" placeholder="Search projects..."
            class="input input-bordered w-64 mr-2" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <div id="project-table">
        {% if projects %}
        <table class="table-auto w-full border rounded shadow">
            <thead>
                <tr class="bg-gray-100">
                    <th class="px-4 py-2 text-left">Name</th>
                    <th class="px-4 py-2 text-left">Description</th>
                    <th class="px-4 py-2 text-center">Private</th>
                    <th class="px-4 py-2 text-center">Archived</th>
                    <th class="px-4 py-2 text-left">Notes</th>
                    <th class="px-4 py-2 text-center">Users</th>
                    <th class="px-4 py-2 text-left">Created</th>
                    <th class="px-4 py-2 text-left">Updated</th>
                    <th class="px-4 py-2 text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                <tr class="border-b hover:bg-gray-50">
                    <td class="px-4 py-2 font-semibold">{{ project.name }}</td>
                    <td class="px-4 py-2">{{ project.description or '' }}</td>
                    <td class="px-4 py-2 text-center">{{ 'Yes' if project.private else 'No' }}</td>
                    <td class="px-4 py-2 text-center">{{ 'Yes' if project.archived_at else 'No' }}</td>
                    <td class="px-4 py-2">{{ project.notes or '' }}</td>
                    <td class="px-4 py-2 text-center">{{ project.users|length }}</td>
                    <td class="px-4 py-2">{{ project.created_at.strftime('%Y-%m-%d') }}</td>
                    <td class="px-4 py-2">{{ project.updated_at.strftime('%Y-%m-%d') }}</td>
                    <td class="px-4 py-2 text-center">
                        <!-- TODO: Add edit, archive, and view details actions -->
                        <span class="text-gray-400">(coming soon)</span>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="flex justify-between items-center mt-4">
            <div>
                Showing {{ (page - 1) * page_size + 1 }}-
                {{ (page - 1) * page_size + projects|length }} of {{ total }}
            </div>
            <div class="flex space-x-2">
                {% set total_pages = (total // page_size) + (1 if total % page_size else 0) %}
                {% for p in range(1, total_pages + 1) %}
                <button class="btn btn-sm {% if p == page %}btn-primary{% else %}btn-outline{% endif %}"
                    hx-get="/api/v1/web/projects?page={{ p }}&page_size={{ page_size }}{% if search %}&search={{ search }}{% endif %}"
                    hx-target="#project-table" hx-push-url="true">
                    {{ p }}
                </button>
                {% endfor %}
            </div>
        </div>
        {% else %}
        <div class="text-center text-gray-500 py-8">No projects found.</div>
        {% endif %}
    </div>
</div>
{% endblock %}