{# TODO: Improve UI/UX, add actions, and style as needed for production #}
<div class="p-6 bg-white rounded shadow-md">
    <h2 class="text-xl font-bold mb-2">Project: {{ project.name }}</h2>
    <dl class="grid grid-cols-1 gap-2">
        <dt class="font-semibold">ID</dt>
        <dd>{{ project.id }}</dd>
        <dt class="font-semibold">Description</dt>
        <dd>{{ project.description or '—' }}</dd>
        <dt class="font-semibold">Private</dt>
        <dd>{{ 'Yes' if project.private else 'No' }}</dd>
        <dt class="font-semibold">Archived At</dt>
        <dd>{{ project.archived_at or '—' }}</dd>
        <dt class="font-semibold">Notes</dt>
        <dd>{{ project.notes or '—' }}</dd>
        <dt class="font-semibold">Users</dt>
        <dd>
            {% if project.users %}
            <ul class="list-disc ml-4">
                {% for user_id in project.users %}
                <li>{{ user_id }}</li>
                {% endfor %}
            </ul>
            {% else %}
            —
            {% endif %}
        </dd>
        <dt class="font-semibold">Created At</dt>
        <dd>{{ project.created_at }}</dd>
        <dt class="font-semibold">Updated At</dt>
        <dd>{{ project.updated_at }}</dd>
    </dl>
</div>