{# templates/resources/content_fragment.html #}
<div class="p-4 bg-white dark:bg-gray-800 rounded shadow">
    <h2 class="text-lg font-semibold mb-2">Edit Resource: {{ resource.file_name }} <span
            class="ml-2 text-xs text-gray-500">({{ resource.resource_type.value }})</span></h2>
    <form>
        <textarea
            class="w-full h-64 p-2 border rounded font-mono text-sm bg-gray-50 dark:bg-gray-900 dark:text-gray-100"
            name="content">{{ content }}</textarea>
        <!-- TODO: Add Save/Submit button and HTMX integration for PATCH endpoint -->
    </form>
</div>