{# Resource Detail Fragment - rendered by GET /api/v1/web/resources/{id} #}
<div class="p-4">
    <div class="mb-4">
        <div class="bg-white rounded-lg shadow p-4">
            <h2 class="text-xl font-bold mb-2">Resource: {{ resource.file_name }}</h2>
            <div class="grid grid-cols-2 gap-4">
                <div><b>Type:</b> {{ resource.resource_type }}</div>
                <div><b>Size:</b> {{ resource.byte_size | filesizeformat }}</div>
                <div><b>Lines:</b> {{ resource.line_count }}</div>
                <div><b>Checksum:</b> {{ resource.checksum }}</div>
                <div><b>GUID:</b> {{ resource.guid }}</div>
                <div><b>Updated:</b> {{ resource.updated_at }}</div>
            </div>
        </div>
    </div>
    <div>
        <h3 class="text-lg font-semibold mb-2">Linked Attacks</h3>
        {% if attacks and attacks|length > 0 %}
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500 border">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th class="px-4 py-2">ID</th>
                        <th class="px-4 py-2">Name</th>
                        <th class="px-4 py-2">Campaign</th>
                        <th class="px-4 py-2">State</th>
                    </tr>
                </thead>
                <tbody>
                    {% for attack in attacks %}
                    <tr class="bg-white border-b">
                        <td class="px-4 py-2">{{ attack.id }}</td>
                        <td class="px-4 py-2">{{ attack.name }}</td>
                        <td class="px-4 py-2">{{ attack.campaign_id }}</td>
                        <td class="px-4 py-2">{{ attack.state }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-gray-500">No attacks linked to this resource.</div>
        {% endif %}
    </div>
</div>