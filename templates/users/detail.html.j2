{# User Detail Fragment for /api/v1/web/users/{id} #}
<div class="card w-full bg-base-100 shadow-md mb-4">
    <div class="card-body">
        <h2 class="card-title text-lg font-bold mb-2">User Detail</h2>
        <table class="table w-full">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>{{ user.role }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ 'Yes' if user.is_active else 'No' }}</td>
                </tr>
                <tr>
                    <th>Superuser</th>
                    <td>{{ 'Yes' if user.is_superuser else 'No' }}</td>
                </tr>
                <tr>
                    <th>Verified</th>
                    <td>{{ 'Yes' if user.is_verified else 'No' }}</td>
                </tr>
                <tr>
                    <th>Created</th>
                    <td>{{ user.created_at }}</td>
                </tr>
                <tr>
                    <th>Updated</th>
                    <td>{{ user.updated_at }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{# test: user.id, user.name, user.email, user.role, user.is_active, user.is_superuser, user.is_verified,
user.created_at, user.updated_at must be present in the fragment #}